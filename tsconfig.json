{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    // 라이브러리 *.d.ts로 설정된 파일의 type checking은 skipt함.
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "webpack.config.js"
  ]
}
